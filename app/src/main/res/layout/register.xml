<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="@drawable/annie"
    android:gravity="center">

    <TableRow android:background="#8dffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="16sp"
            android:textColor="#5b7dff"
            android:layout_marginLeft="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写登录账号"
            android:selectAllOnFocus="true"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:id="@+id/name"
            android:textStyle="bold"
            android:layout_span="3" />
    </TableRow>
    <TableRow android:background="#8dffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密    码:"
            android:textSize="16sp"
            android:textColor="#5b7dff"
            android:id="@+id/txt1"
            android:layout_marginLeft="5dp" />
        <!-- android:inputType="numberPassword"表明只能接受数字密码 -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_span="3"
            android:id="@+id/code" />
    </TableRow>
    <TableRow android:background="#8dffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话号码:"
            android:textSize="16sp"
            android:textColor="#5b7dff" />
        <!-- inputType="phone"表明是输入电话号码的输入框 -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写您的电话号码"
            android:selectAllOnFocus="true"
            android:inputType="phone"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_span="3"
            android:id="@+id/phone" />
    </TableRow>
    <TableRow android:background="#8dffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生   日："
            android:textSize="16sp"
            android:textColor="#5b7dff"
            android:id="@+id/txt2"
            android:layout_marginLeft="5dp" />
        <Spinner
            android:id="@+id/sp_year"
            android:layout_width="90dp"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/sp_month"
            android:layout_width="90dp"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/sp_day"
            android:layout_width="90dp"
            android:layout_height="30dp" />
    </TableRow>
    <TableRow
        android:background="#8dffffff"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="国    籍:"
            android:textSize="16sp"
            android:textColor="#5b7dff"
            android:id="@+id/txt3"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="     "/>

        <Spinner
            android:id="@+id/spi3"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:entries="@array/books"
            android:layout_column="1"
            android:layout_span="3" />
    </TableRow>



    <Button
        android:id="@+id/bn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textStyle="italic"
        android:gravity="center_vertical|center_horizontal" />
</TableLayout>
